#: A_Rough_Life/scenarios/05_More_Hard_Labour.cfg:97
#: A_Rough_Life/scenarios/06_Seeing_the_Light.cfg:18
msgid "Determined Jacques"
msgstr ""

#. [side]: id=Hatrox, type=Gryphon
#: A_Rough_Life/scenarios/05_More_Hard_Labour.cfg:40
#: A_Rough_Life/scenarios/05_More_Hard_Labour.cfg:47
msgid "Hatrox"
msgstr ""

#. [side]: id=Scorpion Queen, type=Giant Scorpion
#: A_Rough_Life/scenarios/05_More_Hard_Labour.cfg:63
msgid "Scorpion Queen"
msgstr ""

#. [side]: id=Scorpion Queen, type=Giant Scorpion
